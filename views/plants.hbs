{{#each plants}}

<div class="jumbotron jumbotron-plants" style="background-image: url({{this.picPath}})">
  <h1 class="display-6" style="color:#19975d">{{this.name}}</h1>
  <div class="container-info-plant">
    <h6 style="padding: 10px; color:rgba(249, 246, 182, 0.9)">Should be fed {{ waterFrequencyPhrase this.waterFrequencyInDays}}</h6>
  </div>
  <div class="container-info-plant2">
    <p style="padding: 10px;"><strong>Water requirements:</strong> {{this.description}}</p>
  </div>
  <div class="text-right">
    <a class="btn btn-primary btn-sm " href="/add-plant?plantFamilyId={{this._id}}" role="button">Add to my garden</a>
  </div>
</div>

{{/each}}


