<h2>Create your Plant</h2>

<br>

{{!-- Post form with enctype="multipart/form-data" (To send files) --}}
<form action="/add-plant" method="post" enctype="multipart/form-data">

  {{!-- This input to define a req.body.name --}}
  <label>Name</label>
  <input class="form-control" type="text" placeholder="The name of your plant" style="background-color: rgba(249, 246, 186, 0.2)" name="name" value="{{plant.name}}">
  <br>

  {{!-- This input to define a req.body.description --}}
  <label>Description</label>
  <textarea class="form-control" placeholder="Info about your plant" name="description" rows="5" cols="20" style="background-color: rgba(249, 246, 182, 0.2)">{{plant.description}}</textarea>
  <br>

  {{!-- This input to define a req.body.waterFrequencyInDays --}}
  <label>Water frequency every X days</label>
  <input class="form-control" type="number" min="1" max="30" placeholder="Insert a number" name="waterFrequencyInDays" value="{{plant.waterFrequencyInDays}}" style="background-color: rgba(249, 246, 182, 0.2)">
  <br>

  {{#if plant.picPath}}
  <label>Default Photo</label><br>
  <img style="max-height:300px" src="{{plant.picPath}}" alt="" class="img-fluid">
  <input  value="{{plant.picPath}}"   name="picPath" type="hidden">
  <br>
  <br>
  {{/if}}


  {{!-- This input to define a req.file, because of `uploadCloud.single("photo")` in routes/index.js  --}}

  <label>Choose your own Photo (optional)</label>
  <input class="form-control " type="file" name="photo" style="background-color: rgba(249, 246, 182, 0.2)">
  <br>

  <input type="submit" value="Save" class="btn btn-primary">
  {{!-- <a class="btn btn-success btn-sm " href="/profile" role="button">Add to my garden</a> --}}
</form>

